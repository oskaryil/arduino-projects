<article class="thumbnail" id="post">
  <div class="img-frame">
    <img class="img-responsive post-img" src="{{post.imgUrl}}" />
  </div>
  <h1 class="text-center">{{post.postTitle}}</h2>
  <div id="postDescription" class="postDescription">
  {{{post.description}}}
  </div>
  <p class="post-author text-center">Made by: {{post.author.name}}</p>
</article>