<div class="container">
  <h2 class="page-header">Upload a new project</h2>
  <form class="upload-form" id="upload-form" action="/upload-project" method="post">
    <div class="form-group">
      <label for="project">Project name</label>
      <input type="text" class="form-control" id="posttitle" name="postTitle" placeholder="Project name" required>
    </div>
    <div class="form-group">
      <label for="components">Compenents</label>
      <input type="text" class="form-control" id="components" name="components" placeholder="Components separated by a comma" required>
      <p class="help-block">Separate each component with a comma(,)</p>
    </div>
    <div class="form-group">
      <label>Description</label>
{{!--       <textarea id="project-description-textarea" name="projectDescription" placeholder="Description" required></textarea> --}}
      <textarea name="projectDescription" name="projectDescription" id="summernote"></textarea>
    </div>
    <div class="form-group">
      <label for="githubRepoLink"><span class="fa fa-code-fork"></span> Link to Github repository</label>
      <input type="text" class="form-control" id="githubRepoLink" name="githubRepoLink">
    </div>
    <div class="form-group">
      <label for="youtubeLink"><span class="fa fa-youtube"></span> Youtube Video Link</label>
      <input type="text" class="form-control" id="youtubeLink" name="youtubeLink">
    </div>
    <div class="form-group">
      <label for="upload">Images</label>
      <input type="file" name="file" id="file-input" required>
      <p class="help-block">Upload an image of your project. Image must be <strong>.png</strong></p>
      <input type="button" class="btn btn-success" id="uploadFileBtn" value="Upload"></button>
    </div>
    <!--
    <div class="checkbox">
      <label>
        <input type="checkbox"> Check me out
      </label>
    </div>-->
    <button type="submit" id="project-submit-btn" class="btn btn-primary btn-block">Submit</button>
  </form>
</div>