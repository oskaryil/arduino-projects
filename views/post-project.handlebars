<div class="container">
  <form class="upload-form" action="/upload-project" method="post">
    <div class="form-group">
      <label for="project">Project name</label>
      <input type="text" class="form-control" id="projectName" name="upload[projectName]" placeholder="Project name" required>
    </div>
    <div class="form-group">
      <label for="components">Compenents</label>
      <input type="text" class="form-control" id="components" name="upload[components]" placeholder="Components" required>
    </div>
    <div class="form-group">
      <label>Description</label>
      <textarea id="project-description-textarea" name="projectDescription" placeholder="Description" required></textarea>
    </div>
    <div class="form-group">
      <label for="github-repo-link">Link to Github repository</label>
      <input type="text" class="form-control" id="github-repo-link" name="upload[githubRepoLink]">
    </div>
    <div class="form-group">
      <label for="upload">Images</label>
      <input type="file" name="file" id="file-input" required>
      <p class="help-block">Upload an image of your project</p>
    </div>
    <!--
    <div class="checkbox">
      <label>
        <input type="checkbox"> Check me out
      </label>
    </div>-->
    <button type="submit" class="btn btn-primary btn-block">Submit</button>
  </form>
</div>