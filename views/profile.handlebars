<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div id="profile">
        <div class="profile-header">
          <h1 class="page-header text-center">Profile</h1>
        </div>
        <div class="profile-info center-block">
          {{#if user.imgUrl}}
            <img class="img-responsive profile-img center-block" src="{{user.imgUrl}}" />
          {{/if}}
          <h2 class="text-center user-info-name">{{user.name}}</h2>
          <p class="text-center user-info user-info-username">Username: {{user.username}}</p>
          <p class="text-center user-info user-info-email">Email: {{user.email}}</p>
          <p class="text-center user-info user-info-date">Created at: {{user.createdAt}}</p>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div id="profile-posts">
        <div class="profile-posts-header">
          <h1 class="page-header text-center">My Posts</h1>
        </div>
        {{#each posts}}
          <div class="user-post well" id="{{_id}}">
            <h3 class="text-center">{{postTitle}}  
            <span class="fa fa-pencil-square-o profile-edit-post-btn profile-post-btn" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Edit project"></span> 
            <span class="fa fa-times profile-remove-post-btn profile-post-btn" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Delete Project"></span></h3>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>


