<div class="container">
  <h2 class="page-header text-center">Contact us</h2>
  <form action="/contact" method="post" accept-charset="utf-8">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" class="form-control" placeholder="Your name*" required>
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" name="email" class="form-control" placeholder="Your email adress*" required validate>
    </div>
    <div class="form-group">
      <label for="subject">Subject</label>
      <input type="text" name="subject" class="form-control" placeholder="Subject">
    </div>
    <div class="form-group">
      <label for="message">Inquiry / Message</label>
      <textarea class="form-control" name="message" placeholder="Your inquiry*" required></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary submit-btn center-block"><span class="fa fa-paper-plane"></span> Send</button>
    </div>
  </form>  
</div>